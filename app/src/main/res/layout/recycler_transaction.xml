<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/imgV"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/img_basketball"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/txt_type"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Test User1"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@id/imgV"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent"
        android:textColor="@color/greyscale_500"
        app:layout_constraintStart_toStartOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:layout_marginTop="@dimen/_3sdp"/>

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$15.99"
        android:textStyle="bold"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toTopOf="@id/imgV"
        app:layout_constraintBottom_toBottomOf="@id/imgV"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>